<%= form_with model: note do |form| %>
<div>
    
      <%= form.label :title %><br>
      
      <div class="mensaje">
      <%= form.text_field :title %>
      </div>
      
      <% note.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
          </div>
  
    <div>
    <div class="titulo">
      <%= form.label :body %><br>
      </div>
      <div class ="area">
      <%= form.text_area :body %><br>
      </div>
      <% note.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div class = "imagen">
    <%= form.file_field :image, accept:'image/*' %>
    </div>
    <div class="colecciones">
    <%= form.select :collection_id, options_for_select(@collections.map{|collection| ["#{collection.name}", collection.id] }) %>
    </div>
    <div class = "confirmacion">
      <%= form.submit %>
    </div>

  <% end %>
  